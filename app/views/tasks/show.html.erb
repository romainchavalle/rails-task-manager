<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<p><%= @task.completed ? :"this task is completed" : :"this task is not completed yet" %></p>

<%= link_to("edit task", edit_task_path(@task)) %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
